<?xml version="1.0" encoding="utf-8"?>
<Defs>


    <!--  ==== Rockcrete blocks ==== -->
    <RecipeDef>
        <defName>POS_MakeBlocksRockcrete</defName>
        <label>make rockcrete blocks</label>
        <description>Smelt stone blocks into rockcrete.</description>
        <jobString>Making rockcrete blocks</jobString>
        <workAmount>1600</workAmount>
        <workSpeedStat>SmeltingSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <workSkill>Crafting</workSkill>
        <researchPrerequisites>
            <li>POS_Research_Concrete_T1</li>
        </researchPrerequisites>
        <recipeUsers>
            <li>ElectricSmelter</li>
        </recipeUsers>
        <allowMixingIngredients>true</allowMixingIngredients>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>StoneBlocks</li>
                    </categories>
                    <disallowedThingDefs>
                        <li>POS_BlocksRockcrete</li>
                        <li>POS_BlocksFerrocrete</li>
                        <li>POS_BlocksPlascrete</li>
                    </disallowedThingDefs>
                </filter>
                <count>40</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Chemfuel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>StoneBlocks</li>
            </categories>
            <thingDefs>
                <li>Chemfuel</li>
            </thingDefs>
            <disallowedThingDefs>
                <li>POS_BlocksRockcrete</li>
                <li>POS_BlocksFerrocrete</li>
                <li>POS_BlocksPlascrete</li>
            </disallowedThingDefs>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <categories>
                <li>StoneBlocks</li>
            </categories>
            <thingDefs>
                <li>Chemfuel</li>
            </thingDefs>
        </defaultIngredientFilter>
        <products>
            <POS_BlocksRockcrete>40</POS_BlocksRockcrete>
        </products>
    </RecipeDef>


