<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>


            <!--  ==== Silver ====  -->

            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="Silver"]/stuffProps/statFactors/Flammability</xpath>
                <value>
                    <Flammability>0</Flammability>
                </value>
            </li>


            <!--  ==== Gold ====  -->

            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="Gold"]/stuffProps/statFactors/Flammability</xpath>
                <value>
                    <Flammability>0</Flammability>
                </value>
            </li>


            <!--  ==== Steel ====  -->

            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="Steel"]/stuffProps/statFactors/Flammability</xpath>
                <value>
                    <Flammability>0</Flammability>
                </value>
            </li>


            <!--  ==== Jade ====  -->

            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Jade"]/stuffProps</xpath>
                <value>
                    <appearance>Bricks</appearance>
                </value>
            </li>


            <!--  ==== Iron ====  -->

            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Vanilla Iron and Steel</li>
                    <li>Vanilla Iron and Steel (Continued)</li>
                </mods>
                <match Class="PatchOperationSequence">
                    <operations>

                        <li Class="PatchOperationReplace">
                            <xpath>/Defs/ThingDef[defName="NECIron"]/stuffProps/color</xpath>
                            <value>
                                <color>(72,73,75)</color>
                            </value>
                        </li>

                        <li Class="PatchOperationReplace">
                            <xpath>/Defs/ThingDef[defName="NECIron"]/stuffProps/statFactors/Flammability</xpath>
                            <value>
                                <Flammability>0.05</Flammability>
                            </value>
                        </li>

                        <li Class="PatchOperationAdd">
                            <xpath>/Defs/ThingDef[defName="NECIron"]/stuffProps</xpath>
                            <value>
                                <appearance>Metal</appearance>
                            </value>
                        </li>

                    </operations>
                </match>
            </li>


            <!--  ==== LegionesAstartes ====  -->

            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Legiones Astartes: Primarch</li>
                </mods>
                <match Class="PatchOperationSequence">
                    <operations>

                        <!--  ==== Ceramite ====  -->

                        <li Class="PatchOperationAdd">
                            <xpath>/Defs/ThingDef[defName="Ceramite"]/stuffProps</xpath>
                            <value>
                                <appearance>Metal</appearance>
                            </value>
                        </li>

                        <!--  ==== Adamantium ====  -->

                        <li Class="PatchOperationAdd">
                            <xpath>/Defs/ThingDef[defName="Adamantium"]/stuffProps</xpath>
                            <value>
                                <appearance>Metal</appearance>
                            </value>
                        </li>

                        <!--  ==== Auramite ====  -->

                        <li Class="PatchOperationAdd">
                            <xpath>/Defs/ThingDef[defName="Auramite"]/stuffProps</xpath>
                            <value>
                                <appearance>Metal</appearance>
                            </value>
                        </li>

                    </operations>
                </match>
            </li>

        </operations>
    </Operation>

</Patch>
