<?xml version="1.0" encoding="UTF-8"?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>


            <!--  ==== Silver ====  -->

            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="Silver"]/stuffProps/statFactors/Flammability</xpath>
                <value>
                    <Flammability>0.10</Flammability>
                </value>
            </li>


            <!--  ==== Gold ====  -->

            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="Gold"]/stuffProps/statFactors/Flammability</xpath>
                <value>
                    <Flammability>0.10</Flammability>
                </value>
            </li>


            <!--  ==== Steel ====  -->

            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef[defName="Steel"]/stuffProps/statFactors/Flammability</xpath>
                <value>
                    <Flammability>0.10</Flammability>
                </value>
            </li>


            <!--  ==== Jade ====  -->

            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Jade"]/stuffProps</xpath>
                <value>
                    <appearance>Bricks</appearance>
                </value>
            </li>


            <!--  ==== Iron ====  -->

            <li Class="PatchOperationFindMod">
                <mods>
                    <li>Vanilla Iron and Steel</li>
                </mods>

                <match Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="NECIron"]/stuffProps/statFactors/Flammability</xpath>
                    <value>
                        <Flammability>0.10</Flammability>
                    </value>
                </match>

            </li>


        </operations>
    </Operation>

</Patch>
